{
  "manifest_version": 3,
  "name": "GoPrint",
  "version": "1.0.0",
  "description": "Extension d'impression intelligente pour documentation technique - Nettoyage automatique et optimisation PDF",
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "GoPrint - Imprimer la page nettoy√©e"
  },

  "background": {
    "service_worker": "src/background/service-worker.js"
  },

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}